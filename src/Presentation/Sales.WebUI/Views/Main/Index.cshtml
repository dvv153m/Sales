@model Sales.WebUI.Models.MainViewModel

Promocode: @Model.Promocode

<div class="text-center">    
    <form>
    <h1 class="display-4">Книги</h1>
    <table class="table">
        <tr><td>Название</td><td>Цена</td><td>Кол-во на складе</td></tr>
        @foreach (var product in @Model.Products)
        {
            <tr><td>@product.Title</td><td>@product.Price</td><td>@product.CopyNumber</td><td><button name="productId" value="@product.Id" asp-action="AddToCart">Добавить в корзину</button></td></tr>
            @foreach (var productDetail in product.ProductDetails)
            {
                <tr><td>@productDetail.Attribute - @productDetail.Value</td></tr>                
            }
                <tr><td></td></tr>
                <tr><td></td></tr>
        }
    </table>
    </form>

    <form>
    <h1 class="display-4">Корзина</h1>
        <table class="table">
            <tr><td>Название</td><td>Цена</td><td>Кол-во на складе</td></tr>
            @foreach (var product in @Model.Cart)
            {
                <tr><td>@product.Title</td><td>@product.Price</td><td>@product.CopyNumber</td><td><button name="productId" value="@product.Id" asp-action="DeleteFromCart">Удалить из корзину</button></td></tr>
                @foreach (var productDetail in product.ProductDetails)
                {
                    <tr><td>@productDetail.Attribute - @productDetail.Value</td></tr>
                }
                <tr><td></td></tr>
                <tr><td></td></tr>
            }
        </table>
        </br>
        <button asp-action="CreateOrder">Оформить заказ</button></td>
    </form>

</div>
